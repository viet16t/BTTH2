@model DoanQuocVietBTTH2.Models.Student
@{
    ViewData["Title"] = "Edit";
}
<h4>Sửa thông tin Sing viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for = "StudentID" />
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="texy-danger"></span>
            </div>
            <div class="form-group">
                <input type="sumbit" value="Save" class="btn btn-primary" />
                <a class="btn btn-Success" asp-action="Index"> Danh sách sinh viên</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}